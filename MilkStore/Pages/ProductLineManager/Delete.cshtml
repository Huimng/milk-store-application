@page
@model MilkStore.Pages.ProductLineManager.DeleteModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Product Line - Baby Store</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/productManager.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Orders/GetOrdersStaff">Order</a></li>
                    <li><a href="/ProductManager">Products</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Delete Product Line</h2>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Product Line Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductLine.ExpireDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductLine.ExpireDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductLine.AgeGroup)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductLine.AgeGroup)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductLine.Product)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductLine.Product.Brand)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="ProductLine.ProductLineId" />
                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
