@page
@model MilkStore.Pages.ProductLineManager.EditModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product Line - Baby Store</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/productManager.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Orders/GetOrdersStaff">Order</a></li>
                    <li><a href="/ProductManager">Products</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                    <li><a href="/PostManager">Post</a></li>
                    <li><a href="/MessageBoxManager">Chat</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Edit Product Line</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductLine.ProductLineId" />
                    <div class="form-group">
                        <label asp-for="ProductLine.ProductId" class="control-label"></label>
                        <select asp-for="ProductLine.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                        <span asp-validation-for="ProductLine.ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductLine.ExpireDate" class="control-label"></label>
                        <input asp-for="ProductLine.ExpireDate" class="form-control" />
                        <span asp-validation-for="ProductLine.ExpireDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductLine.AgeGroup" class="control-label"></label>
                        <input asp-for="ProductLine.AgeGroup" class="form-control" />
                        <span asp-validation-for="ProductLine.AgeGroup" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
