@page
@model MilkStore.Pages.CommentPost.DeleteModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Comment - Baby Store</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/comment.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Homepage.html">Home</a></li>
                    <li><a href="/Products">Products</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Delete Comment</h2>
        <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Comment</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">Content</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Comment.Content)</dd>
                            <dt class="col-sm-3">Create Date</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Comment.CreateDate)</dd>
                            <dt class="col-sm-3">Post</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Comment.Post.Contents)</dd>
                        </dl>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <form method="post">
                        <input type="hidden" asp-for="Comment.CommentId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.10/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
