@page
@model MilkStore.Pages.PostManager.CreateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Baby Store - Create Post</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/posts.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a asp-page="/Products">Products</a></li>
                    <li><a asp-page="/Posts">Posts</a></li>
                    <li><a asp-page="/About">About Us</a></li>
                    <li><a asp-page="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container">
        <section class="post-section">
            <h2>Create a New Post</h2>
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Post.Title" class="control-label"></label>
                            <input asp-for="Post.Title" class="form-control" />
                            <span asp-validation-for="Post.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Contents" class="control-label"></label>
                            <textarea asp-for="Post.Contents" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Post.Contents" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.CreateBy" class="control-label"></label>
                            <select asp-for="Post.CreateBy" class="form-control" asp-items="ViewBag.CreateBy"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.ProductId" class="control-label"></label>
                            <select asp-for="Post.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-page="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>