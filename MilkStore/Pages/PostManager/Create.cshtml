@page
@model MilkStore.Pages.PostManager.CreateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post - Baby Store</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/postmanager.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Home">Home</a></li>
                    <li><a href="/ProductManager">Products</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                    <li><a href="/PostManager">Post</a></li>
                    <li><a href="/MessageBoxManager">Chat</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Create New Post</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Post.Title" class="control-label"></label>
                        <input asp-for="Post.Title" class="form-control" />
                        <span asp-validation-for="Post.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Post.Contents" class="control-label"></label>
                        <input asp-for="Post.Contents" class="form-control" />
                        <span asp-validation-for="Post.Contents" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Post.ProductId" class="control-label"></label>
                        <select asp-for="Post.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                        <span asp-validation-for="Post.ProductId" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.10/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
