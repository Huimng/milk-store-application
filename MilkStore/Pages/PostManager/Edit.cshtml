@page
@model MilkStore.Pages.PostManager.EditModel

<body>
<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.PostId" />
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Contents" class="control-label"></label>
                <input asp-for="Post.Contents" class="form-control" />
                <span asp-validation-for="Post.Contents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.CreateDate" class="control-label"></label>
                <input asp-for="Post.CreateDate" class="form-control" type="datetime" disabled/>
                <span asp-validation-for="Post.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.CreateBy" class="control-label"></label>
                <select asp-for="Post.CreateBy" class="form-control" asp-items="ViewBag.CreateBy" disabled></select>
                <span asp-validation-for="Post.CreateBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Status" class="control-label"></label>
                <select asp-for="Post.Status" class="form-control" asp-items="ViewBag.PostStatuses"></select>
                <span asp-validation-for="Post.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.ProductId" class="control-label"></label>
                <select asp-for="Post.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="Post.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.10/signalr.min.js"></script>
<script src="~/js/site.js"></script>