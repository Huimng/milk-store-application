@page
@model MilkStore.Pages.PostManager.IndexModel

@{
    ViewData["Title"] = "Post Manager - Baby Store";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/postmanager.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Home">Home</a></li>
                    <li><a href="/ProductManager">Products</a></li>
                    <li><a href="/PostManager">Posts</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Post Manager</h2>

        <div class="text-right mb-3">
            <a class="btn btn-primary" asp-page="Create">Create New</a>
        </div>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPost[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPost[0].Contents)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPost[0].CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPost[0].Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPost[0].Account)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPost[0].Product)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListPost)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contents)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Account.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Brand)
                        </td>
                        <td>
                            <a class="btn btn-secondary btn-sm" asp-page="./Edit" asp-route-id="@item.PostId">Edit</a>
                            <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.PostId">Details</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.PostId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.10/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
