@page "{id:int}"
@model MilkStore.Pages.PostManager.DetailsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Baby Store - Post Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/posts.css">
</head>
<body>
    

    <main class="container">
        <section class="post-section">
            <h2>Post Details</h2>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.Contents)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.Contents)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.CreateDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.CreateDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.Status)
                </dd>
                @* Uncomment if needed *@
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.Account)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.Account)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Post.ProductId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Post.ProductId)
                </dd>
            </dl>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Comments[0].Content)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comments[0].CreateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comments[0].Post)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Comments)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Content)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Post.Title)
                            </td>
                            <td>
                                <a asp-page="./Delete" asp-route-id="@item.CommentId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h3>Add a comment</h3>
            <form method="post" asp-route-postId="@Model.Post?.PostId">
                <textarea asp-for="CommentIndex.Content"></textarea>
                <span asp-validation-for="CommentIndex.Content"></span>
                <button type="submit">Submit</button>
            </form>
            <div class="text-center mt-3">
                <a asp-page="./Edit" asp-route-id="@Model.Post?.PostId" class="btn btn-primary">Edit</a>
                <a asp-page="./Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.10/signalr.min.js"></script>
<script src="~/js/site.js"></script>