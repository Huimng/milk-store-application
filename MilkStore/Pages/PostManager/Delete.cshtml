@page
@model MilkStore.Pages.PostManager.DeleteModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Baby Store - Delete Post</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/posts.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a asp-page="/Products">Products</a></li>
                    <li><a asp-page="/PostManager">Posts</a></li>
                    <li><a asp-page="/About">About Us</a></li>
                    <li><a asp-page="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <section class="post-section">
            <h2 class="text-center text-danger mb-4">Are you sure you want to delete this?</h2>
            <div>
                <h4>Post Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Post.Title)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Post.Title)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Post.Contents)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Post.Contents)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Post.CreateDate)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Post.CreateDate)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Post.Status)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Post.Status)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Post.Account)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Post.Account.Email)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Post.Product)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Post.Product.Brand)</dd>
                </dl>

                <form method="post" class="text-center">
                    <input type="hidden" asp-for="Post.PostId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index" class="btn btn-outline-primary">Back to List</a>
                </form>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.10/signalr.min.js"></script>
<script src="~/js/site.js"></script>
