@page
@model MilkStore.Pages.AccountManager.IndexModel

@{
    ViewData["Title"] = "Account Management - Baby Store";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/accountManager.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/AccountManager/Index">Account</a></li>
                    <li><a href="/Orders/GetStatics">Statistics</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <div class="text-center mb-4">
            <a asp-page="Create" class="btn btn-primary">Create New Account</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Account[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Account[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Account[0].Username)</th>
                    <th>@Html.DisplayNameFor(model => model.Account[0].Password)</th>
                    <th>@Html.DisplayNameFor(model => model.Account[0].Role)</th>
                    <th>@Html.DisplayNameFor(model => model.Account[0].Status)</th>
                    <th>@Html.DisplayNameFor(model => model.Account[0].CreatedDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Account[0].UpdateDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Account)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.UpdateDate)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-info">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>