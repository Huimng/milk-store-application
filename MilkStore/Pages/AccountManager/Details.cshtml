@page
@model MilkStore.Pages.AccountManager.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Baby Store</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/account.css" asp-append-version="true" type="text/css" />
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Index">Home</a></li>
                    <li><a href="/Products">Products</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Account Details</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Name)</dd>

                            <dt class="col-sm-3">Email</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Email)</dd>

                            <dt class="col-sm-3">Username</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Username)</dd>

                            <dt class="col-sm-3">Password</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Password)</dd>

                            <dt class="col-sm-3">Role</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Role)</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Status)</dd>

                            <dt class="col-sm-3">Created Date</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.CreatedDate)</dd>

                            <dt class="col-sm-3">Updated Date</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.UpdateDate)</dd>
                        </dl>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <a asp-page="./Edit" asp-route-id="@Model.Account?.AccountId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer mt-5">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
