@page
@model MilkStore.Pages.Home.ProductModel
@{
    ViewData["Title"] = "Products";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MilkStore.styles.css" asp-append-version="true" />
</head>
<body>

<div class="container">
    <h2>Products</h2>

    <div class="products">
        @foreach (var product in Model.Products)
        {
                <a class="product-card" asp-page="ProductDetail" asp-route-proId="@product.ProductId" style="text-decoration: none">
                <img src="/uploads/@product.UrlImage" alt="@product.ProductName">
                <div class="product-info">
                    <h3>@product.ProductName</h3>
                    <p>@product.Description</p>
                    <p class="price">@product.Discount.ToString("C")</p>
                </div>
            </a>
        }
    </div>

    <nav class="pagination">
        <ul class="pagination">
            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./Product" asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-page="./Product" asp-route-pageIndex="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./Product" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>

</body>
</html>