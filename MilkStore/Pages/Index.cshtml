@page
@model MilkStore.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to Baby Store";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/homepage.css">
</head>
<body>
    <!-- Carousel Section -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/login.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/logincover.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/milk02.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a asp-page="/Products">Products</a></li>
                    <li><a asp-page="/About">About Us</a></li>
                    <li><a asp-page="/Contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main>
        <section class="hero">
            <div class="container">
                <h2>Welcome to Baby Store</h2>
                <p>Your one-stop shop for all baby needs!</p>
                <a href="#" class="btn btn-primary">Shop Now</a>
            </div>
        </section>

        <section class="featured-products">
            <div class="container">
                <h2>Featured Products</h2>
                <div class="product-grid">
                    <div class="product-item">
                        <img src="~/images/product1.jpg" alt="Product 1">
                        <h3>Product 1</h3>
                        <p>$19.99</p>
                    </div>
                    <div class="product-item">
                        <img src="~/images/product2.jpg" alt="Product 2">
                        <h3>Product 2</h3>
                        <p>$29.99</p>
                    </div>
                    <div class="product-item">
                        <img src="~/images/product3.jpg" alt="Product 3">
                        <h3>Product 3</h3>
                        <p>$39.99</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="categories">
            <div class="container">
                <h2>Shop by Category</h2>
                <div class="category-grid">
                    <div class="category-item">
                        <img src="~/images/category1.jpg" alt="Category 1">
                        <h3>Clothing</h3>
                    </div>
                    <div class="category-item">
                        <img src="~/images/category2.jpg" alt="Category 2">
                        <h3>Toys</h3>
                    </div>
                    <div class="category-item">
                        <img src="~/images/category3.jpg" alt="Category 3">
                        <h3>Accessories</h3>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
