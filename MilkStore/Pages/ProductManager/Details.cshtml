@page
@model MilkStore.Pages.ProductManager.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.UrlImage)
        </dt>
        <dd class="col-sm-10">
            <img src="/uploads/@Model.Product.UrlImage" alt="Product Image" style="width: auto; height: 100px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.CreatedDate)
        </dd>
        <dt class="col-sm-2">
           Phân loại hàng:
        </dt>
        <dd class="col-sm-10">
            <table class="table table-bordered">
                <thead>
                    <tr>                      
                        <th scope="col">Quantity</th>
                        <th scope="col">Expire Day</th>
                        <th scope="col">Age Group</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductLineSummaries)
                    {
                        <tr>
                            <td>@item.Quantity</td>
                            <td>@item.ExpireDate</td>
                            <td>@item.AgeGroup</td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
        <form method="post">
        <dt class="col-sm-2">
         Add Quantity Product
        </dt>
        <dd class="col-sm-10">
               
        </dd>
        <dt class="col-sm-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            
        </dt>
        <dd class="col-sm-10">
            <label asp-for="ProductLine.ExpireDate" class="control-label"></label>
            <input asp-for="ProductLine.ExpireDate" class="form-control" required />
            <span asp-validation-for="ProductLine.ExpireDate" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
           
        </dt>
        <dd class="col-sm-10">
            <label asp-for="ProductLine.AgeGroup" class="control-label"></label>
            <input asp-for="ProductLine.AgeGroup" class="form-control" required />
            <span asp-validation-for="ProductLine.AgeGroup" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
           
        </dt>
        <dd class="col-sm-10">
            <input type="hidden" name="productId" value="@Model.Product.ProductId" />
            <input type="submit" value="Create" class="btn btn-primary" />
        </dd>

        </form>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product?.ProductId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
