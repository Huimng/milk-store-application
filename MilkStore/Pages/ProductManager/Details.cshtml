@page
@model MilkStore.Pages.ProductManager.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/productManager.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Orders/GetOrdersStaff">Order</a></li>
                    <li><a href="/ProductManager">Products</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                    <li><a href="/PostManager">Post</a></li>
                    <li><a href="/MessageBoxManager">Chat</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Product Details</h2>
        <div>
            <h4>Product</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.ProductCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.ProductCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.UrlImage)
                </dt>
                <dd class="col-sm-10">
                    <img src="/uploads/@Model.Product.UrlImage" alt="Product Image" class="img-fluid" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Discount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Discount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.CreatedDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.CreatedDate)
                </dd>
                <dt class="col-sm-2">
                    Phân loại hàng:
                </dt>
                <dd class="col-sm-10">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Quantity</th>
                                <th scope="col">Expire Day</th>
                                <th scope="col">Age Group</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ProductLineSummaries)
                            {
                                <tr>
                                    <td>@item.Quantity</td>
                                    <td>@item.ExpireDate.ToUniversalTime()</td>
                                    <td>@item.AgeGroup</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </dd>
                <form method="post">
                <dt class="col-sm-2">
                    Add Quantity Product
                </dt>
                <dd class="col-sm-10"></dd>
                <dt class="col-sm-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </dt>
                <dd class="col-sm-10">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" required />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </dd>
                <dt class="col-sm-2"></dt>
                <dd class="col-sm-10">
                    <label asp-for="ProductLine.ExpireDate" class="control-label"></label>
                    <input asp-for="ProductLine.ExpireDate" class="form-control" required />
                    <span asp-validation-for="ProductLine.ExpireDate" class="text-danger"></span>
                </dd>
                <dt class="col-sm-2"></dt>
                <dd class="col-sm-10">
                    <label asp-for="ProductLine.AgeGroup" class="control-label"></label>
                    <input asp-for="ProductLine.AgeGroup" class="form-control" required />
                    <span asp-validation-for="ProductLine.AgeGroup" class="text-danger"></span>
                </dd>
                <dt class="col-sm-2"></dt>
                <dd class="col-sm-10">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                    <input type="submit" value="Create" class="btn btn-primary" />
                </dd>
                </form>
            </dl>
        </div>
        <div class="text-center mt-3">
           @*  <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@Model.Product?.ProductId">Edit</a> | *@
            <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
