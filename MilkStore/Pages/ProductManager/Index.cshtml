@page
@model MilkStore.Pages.ProductManager.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/productManager.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Baby Store</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="/Orders/GetOrdersStaff">Order</a></li>
                    <li><a href="/ProductManager">Products</a></li>
                    <li><a href="/About">About Us</a></li>
                    <li><a href="/Contact">Contact</a></li>
                    <li><a href="/PostManager">Post</a></li>
                    <li><a href="/MessageBoxManager">Chat</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container mt-5">
        <h2 class="text-center mb-4">Product Manager</h2>

        <p>
            <a class="btn btn-primary" asp-page="Create">Create New</a>
        </p>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].ProductCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Brand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].UrlImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].CreatedDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Product)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td>
                            <img src="/uploads/@item.UrlImage" alt="Product Image" class="product-image" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                           @*  <a class="btn btn-secondary btn-sm" asp-page="./Edit" asp-route-id="@item.ProductId">Edit</a> *@
                            <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.ProductId">Details</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Baby Store. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
